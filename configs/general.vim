"---------- General ----------- "
syntax enable
set wrap "Wrap lines
set undolevels=1000    " Number of undo levels
set backspace=indent,eol,start    " Backspace behaviour
let $LANG='en'
set langmenu=en
set encoding=utf8
set clipboard=unnamed " Use macOS Clipboard
set ffs=unix,dos,mac " unix file format

" Turn backup off
set nobackup
set noswapfile
set nowb

" Set tabs
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set textwidth=0
